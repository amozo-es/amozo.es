<section id="technologies" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-heading mb-4">Conocimientos Técnicos</h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Mi conjunto de habilidades en desarrollo web, IA, bases de datos y herramientas profesionales
      </p>
    </div>

    <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-8 max-w-7xl mx-auto">
      {sections.map((section, sectionIndex) => (
        <div
          key={section.title}
          class="card hover:shadow-lg transition-shadow duration-300 animate-slide-up p-6 rounded-lg border border-border bg-card"
          style={`animation-delay: ${sectionIndex * 0.2}s`}
        >
          <div class="mb-4">
            <h3 class="text-xl font-semibold flex items-center gap-2">
              <div set:html={section.icon} class={`h-6 w-6 ${section.color}`} />
              {section.title}
            </h3>
          </div>
          <div class="space-y-4">
            {section.data.map((tech, index) => (
              <div
                key={tech.name}
                class="space-y-3 animate-fade-in"
                style={`animation-delay: ${sectionIndex * 0.2 + index * 0.1}s`}
              >
                <div class="flex items-center justify-between">
                  <span class="flex items-center gap-2 font-medium">
                    <div set:html={tech.icon} class="text-lg w-6 h-6" />
                    {tech.name}
                  </span>
                  <span class="text-sm text-muted-foreground font-semibold">{tech.level}%</span>
                </div>
                {tech.description && (
                  <p class="text-xs text-muted-foreground italic">{tech.description}</p>
                )}
                <div class="w-full bg-secondary rounded-full h-2">
                  <div
                    class="bg-primary h-2 rounded-full transition-all duration-1000 ease-out"
                    style={`width: ${tech.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>