<section id="projects" class="py-20 bg-muted/30">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-heading mb-4">Proyectos Propios Destacados</h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Una selección de mis proyectos personales más relevantes desarrollados a lo largo de más de 25 años de experiencia en desarrollo web, aplicaciones móviles y tecnologías emergentes.
      </p>
    </div>

    {/* Featured Projects */}
    <div class="mb-16">
      <div class="grid md:grid-cols-2 gap-8">
        {featuredProjects.map((project, index) => (
          <div
            key={project.id}
            class="card group hover:shadow-xl transition-all duration-300 hover:scale-[1.02] animate-slide-up overflow-hidden rounded-lg border border-border bg-card"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="relative h-48 overflow-hidden">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <h4 class="text-xl font-semibold flex-1 pr-4">{project.title}</h4>
                <div class="flex items-center gap-2 flex-shrink-0">
                  <span class="text-sm font-medium text-muted-foreground">{project.date}</span>
                  {project.active ? (
                    <span class="px-2 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 rounded-full text-xs font-medium">
                      Activo
                    </span>
                  ) : (
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400 rounded-full text-xs font-medium">
                      Archivado
                    </span>
                  )}
                </div>
              </div>
              <p class="text-muted-foreground leading-relaxed mb-4">{project.description}</p>

              {project.fullDescription && (
                <p class="text-sm text-muted-foreground leading-relaxed mb-4">
                  {project.fullDescription}
                </p>
              )}

              {project.features && (
                <div class="mb-4">
                  <h5 class="font-semibold mb-2 text-sm text-foreground">Características principales:</h5>
                  <ul class="list-disc list-inside text-sm text-muted-foreground space-y-1">
                    {project.features.slice(0, 3).map((feature, idx) => (
                      <li key={idx}>{feature}</li>
                    ))}
                    {project.features.length > 3 && (
                      <li class="text-primary">...y {project.features.length - 3} características más</li>
                    )}
                  </ul>
                </div>
              )}

              {project.metrics && (
                <div class="mb-4 p-3 bg-muted/50 rounded-md">
                  <h5 class="font-semibold mb-2 text-sm text-foreground">Métricas destacadas:</h5>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm">
                    {Object.entries(project.metrics).map(([key, value]) => (
                      <div key={key} class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-primary" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                        <span class="text-muted-foreground">{value}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.slice(0, 8).map((tech) => (
                  <span key={tech} class="px-2 py-1 bg-secondary text-secondary-foreground rounded-md text-xs">
                    {tech}
                  </span>
                ))}
                {project.technologies.length > 8 && (
                  <span class="px-2 py-1 bg-primary/10 text-primary rounded-md text-xs">
                    +{project.technologies.length - 8} más
                  </span>
                )}
              </div>
              <div class="flex flex-wrap gap-2">
                {project.github && (
                  <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground rounded-md text-sm font-medium"
                  >
