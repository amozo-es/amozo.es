---
// Hero section component
---

<section class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20">
  <!-- Background Effects -->
  <div class="absolute inset-0 gradient-bg opacity-10"></div>
  <div class="absolute top-20 left-20 w-72 h-72 bg-primary/20 rounded-full blur-3xl animate-float"></div>
  <div
    class="absolute bottom-20 right-20 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-float"
    style="animation-delay: 2s"
  ></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-16 animate-fade-in">
      <!-- Photo - Left side on large screens -->
      <div class="flex-shrink-0">
        <div class="relative w-48 h-48 lg:w-64 lg:h-64">
          <img
            src="/developer-headshot.png"
            alt="Alex Desarrollador - Foto de perfil"
            class="w-full h-full rounded-full object-cover border-4 border-primary/20 shadow-2xl animate-float"
          />
          <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-primary/20 to-accent/20"></div>
        </div>
      </div>

      <!-- Content - Right side on large screens -->
      <div class="text-center lg:text-left flex-1 max-w-2xl">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold font-heading mb-6">
          Hola, soy{" "}
          <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
            Alejandro Mozo Quesada
          </span>
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-muted-foreground mb-8 leading-relaxed">
          Ingeniero en Informática con experiencia docente, investigadora y profesional en desarrollo web, inteligencia artificial y análisis de datos.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center mb-12">
          <button
            id="contact-btn"
            class="text-lg px-8 py-6 bg-primary text-primary-foreground hover:bg-primary/90 rounded-md font-medium transition-colors flex items-center gap-2"
          >
            Contactar
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </button>
          <div class="flex gap-4">
            <a
              href="https://github.com/amozo-es"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 border border-input bg-transparent hover:bg-accent hover:text-accent-foreground rounded-md flex items-center justify-center transition-colors"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a
              href="https://www.linkedin.com/in/alejandro-mozo-quesada/"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 border border-input bg-transparent hover:bg-accent hover:text-accent-foreground rounded-md flex items-center justify-center transition-colors"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center mt-12 animate-bounce">
      <svg class="w-8 h-8 mx-auto text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<script>
  // Contact button functionality
  const contactBtn = document.getElementById('contact-btn');
  contactBtn?.addEventListener('click', () => {
    const contactSection = document.getElementById('contact');
    if (contactSection) {
      contactSection.scrollIntoView({ behavior: 'smooth' });
    }
  });
</script>