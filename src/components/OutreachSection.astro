  {
    id: 1,
    title: "Miembro de la Cátedra 5G Cultura Digital y Tecnologías de Nueva Generación para la Sociedad de Telefónica",
    organization: "Telefónica - Universidad de Málaga",
    period: "2025",
    description: "Miembro activo de la Cátedra de Telefónica enfocada en la investigación y divulgación de tecnologías 5G, cultura digital y su impacto social.",
    type: "Membresía",
    category: "institutional",
    link: "https://catedratelefonicauma.es/alejandro-mozo-quesada/",
    featured: true
  },
  {
    id: 2,
    title: "Charla 'Cómo enseñamos a las máquinas: introducción al aprendizaje de la IA'",
    organization: "Festival de cine Fantástico (FANCINE)",
    period: "2024",
    description: "Charla divulgativa sobre conceptos básicos de aprendizaje automático dentro del marco del festival de cine fantástico. Introducción a la IA para público general.",
    type: "Charla Divulgativa",
    category: "outreach",
    link: "https://amozo.es/ia-fancine/",
    featured: true
  },
  {
    id: 3,
    title: "Charla 'Picasso + IA'",
    organization: "Varias Instituciones",
    period: "2024",
    description: "Presentación sobre la fusión entre arte e inteligencia artificial, explorando cómo las tecnologías IA pueden interpretar y crear arte inspirado en Picasso.",
    type: "Conferencia",
    category: "outreach",
    link: "https://zenodo.org/records/15023285",
    featured: true
  },
  {
    id: 4,
    title: "Participación en 'Picasso y la IA'",
    organization: "Cátedra Telefónica-UMA",
    period: "2023",
    description: "Actividad vinculada a la Cátedra Telefónica-UMA. Desarrollo y explicación de experiencias interactivas basadas en IA relacionadas con la obra de Picasso.",
    type: "Proyecto Divulgativo",
    category: "outreach",
    link: "https://catedratelefonicauma.es/actividades/picasso-y-la-ia/",
    featured: false
  },
  {
    id: 5,
    title: "Estancia formación en JOŽEF STEFAN INSTITUTE",
    organization: "Jožef Stefan Institute (Eslovenia)",
    period: "2024",
    description: "Estancia formativa de 40 horas en el prestigioso instituto de investigación esloveno dentro del programa ERASMUS+ KA 131.",
    type: "Formación Internacional",
    category: "training",
    link: "",
    featured: false
  },
  {
    id: 6,
    title: "Curso Marketing digital - WordPress & Posicionamiento en buscadores SEO",
    organization: "Universidad de Málaga - Titulaciones Propias",
    period: "2013 – Actualidad",
    description: "Profesor de cursos de titulaciones propias de la UMA especializados en Marketing digital, WordPress y Posicionamiento en buscadores SEO.",
    type: "Docencia Continua",
    category: "teaching",
    link: "https://www.ensenanzaspropias.uma.es/informacion_curso.php?id_curso=6904046",
    featured: false
  }
];

const featuredOutreach = outreachData.filter((item) => item.featured);
const otherOutreach = outreachData.filter((item) => !item.featured);

function getCategoryIcon(category) {
  switch (category) {
    case 'outreach':
      return '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>';
    case 'training':
      return '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 14l9-5-9-5-9 5 9 5z" fill="currentColor"/><path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" fill="currentColor"/><path d="M12 14v7" fill="currentColor"/></svg>';
    case 'teaching':
      return '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3 6v12a2 2 0 002 2h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2-2zm0 4h18v8a2 2 0 01-2 2H5a2 2 0 01-2-2v-8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>';
    case 'institutional':
      return '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" fill="currentColor"/></svg>';
    default:
      return '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/></svg>';
  }
}

function getTypeColor(type) {
  switch (type) {
    case 'Charla Divulgativa':
      return 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200';
    case 'Conferencia':
      return 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200';
    case 'Membresía':
      return 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200';
    case 'Formación Internacional':
      return 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200';
    case 'Docencia Continua':
      return 'bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-200';
    case 'Proyecto Divulgativo':
      return 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200';
    default:
      return 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200';
  }
}
---

<section id="outreach" class="py-20 bg-muted/30">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-heading mb-4">Divulgación y Formación</h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Actividades recientes de divulgación científica, formación continua y participación en proyectos culturales y tecnológicos
      </p>
    </div>

    <!-- Featured Outreach Activities -->
    <div class="max-w-6xl mx-auto mb-16">
      <h3 class="text-2xl font-bold mb-8 flex items-center gap-2">
        <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Actividades Destacadas
      </h3>
      <div class="grid md:grid-cols-2 gap-8">
        {featuredOutreach.map((activity, index) => (
          <div
            key={activity.id}
            class="card hover:shadow-lg transition-all duration-300 hover:scale-[1.02] animate-slide-up rounded-lg border border-border bg-card p-6"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="mb-4">
              <div class="flex items-start justify-between mb-3">
                <div class="flex items-center gap-2">
                  <div set:html={getCategoryIcon(activity.category)} class="text-primary w-5 h-5" />
                  <span class={`px-2 py-1 rounded-full text-xs font-medium ${getTypeColor(activity.type)}`}>
                    {activity.type}
                  </span>
                </div>
                <span class="text-sm text-muted-foreground font-medium">{activity.period}</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{activity.title}</h3>
              <p class="text-lg font-semibold text-primary">{activity.organization}</p>
            </div>
            <div>
              <p class="text-muted-foreground leading-relaxed mb-4">{activity.description}</p>
              {activity.link && (
                <a
                  href={activity.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  Ver más
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Other Outreach Activities -->
    {otherOutreach.length > 0 && (
      <div class="max-w-6xl mx-auto">
        <h3 class="text-2xl font-bold mb-8">Otras Actividades</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {otherOutreach.map((activity, index) => (
            <div
              key={activity.id}
              class="card hover:shadow-lg transition-all duration-300 hover:scale-[1.02] animate-slide-up rounded-lg border border-border bg-card p-6"
              style={`animation-delay: ${(featuredOutreach.length + index) * 0.1}s`}
            >
              <div class="mb-4">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex items-center gap-2">
                    <div set:html={getCategoryIcon(activity.category)} class="text-primary w-5 h-5" />
                    <span class={`px-2 py-1 rounded-full text-xs font-medium ${getTypeColor(activity.type)}`}>
                      {activity.type}
                    </span>
                  </div>
                  <span class="text-sm text-muted-foreground font-medium">{activity.period}</span>
                </div>
                <h3 class="text-lg font-semibold mb-2">{activity.title}</h3>
                <p class="text-base font-semibold text-primary">{activity.organization}</p>
              </div>
              <div>
                <p class="text-muted-foreground text-sm leading-relaxed mb-3">{activity.description}</p>
                {activity.link && (
                  <a
                    href={activity.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors text-sm"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    Ver más
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>